<%= render partial: "shared/header", locals: {title: "LIVE MAP" , back: maps_path ,single_page: ""} %>
<p id="notice"><%= notice %></p>
<div id="map" class="map">
  <!-- OL map will be here  -->
</div>


<script type="text/javascript">
	// adding GPS DATA
	window.currentUrl = "current.json";
	window.geojsonObject =  {
	  'type': 'FeatureCollection',
	  'crs': {
	    'type': 'name',
	    'properties': {
	      'name': 'EPSG:3857'
	    }
	  },
	  'features': [
		<% if(Map.any?) then %>
		{
	    'type': 'Feature',
	    'geometry': {
	      'type': 'Point',
	      'coordinates': ol.proj.fromLonLat([
        <%= Map.last.lon %>
        ,
        <%= Map.last.lat %>
        ])
	    }
	  }
		<% end %>
		]
	};

	</script>
