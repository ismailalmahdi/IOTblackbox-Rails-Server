<%= render partial: "shared/header", locals: {title: "Videos" , back: root_path,single_page: ""} %>
<p id="notice"><%= notice %></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Flag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.description %></td>
        <td><%= video.flag %></td>
        <td><%= link_to 'Show', video, :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_video_path(video), :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', video, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path, :class => "btn btn-primary" %>
