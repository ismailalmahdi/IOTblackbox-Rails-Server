<%= render partial: "shared/header", locals: {title: "Contacts" , back: root_path, single_page: "", new_page: new_contact_path} %>

<div class="container">
  <div class="row">
    <% @contacts.each do |contact| %>
      <div class="card col-md-4 mx-2">
        <div class="card-body">
          <h5 class="card-title"><%= contact.first_name %> <%= contact.last_name %></h5>
          <p class="card-text"><strong>Phone Number :</strong><%= contact.phone_number %></p>
          <p class="card-text"><strong>Email :</strong><%= contact.email %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'Show', contact, :class => "btn btn-sm btn-outline-secondary" %>
              <%= link_to 'Edit', edit_sensor_path(contact), :class => "btn btn-sm btn-outline-secondary" %>
              <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-outline-secondary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
